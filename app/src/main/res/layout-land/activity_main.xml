<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <Button
            android:text="@string/marca"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/marca"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/activity2" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.051"
            app:layout_constraintTop_toTopOf="@+id/activity2"/>
    <Button
            android:text="@string/decir_hola"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity2" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView"
            app:layout_constraintHorizontal_bias="0.071" app:layout_constraintVertical_bias="0.114"/>
    <FrameLayout
            android:layout_width="382dp"
            android:layout_height="400dp"
            android:id="@+id/espacio"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>
</android.support.constraint.ConstraintLayout>